<!DOCTYPE html>
<html>
  <head>
    <%= csrf_meta_tags %>

	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.js"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bookers</title>
    <link href='https://fonts.googleapis.com/css?family=Raleway:400,600,700' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:400,600,700' rel='stylesheet' type='text/css'>
  </head> 

  <body>

    <div class="header" id="header">
      <nav class="navbar navbar-main navbar-shadow" role="navigation" id="slide-nav">
        <div class="container relative">
          <div class="navbar-header">
            <h1 class="navbar-logo" href="/">
              <strong>Bookers</strong>
            </h1>
   
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar-collapse">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
          </div>
          <div id="slidemenu">
            <ul class="nav navbar-nav navbar-right">
  	      	  <% if user_signed_in? %>
              	<li class="glyphicon glyphicon-home home">
                  <%= link_to 'Home', "/users" %>
                </li>

                <li class="glyphicon glyphicon-user users">
                  <%= link_to 'Users', "/users" %>
                </li>

                <li class="glyphicon glyphicon-book books">
                  <%= link_to 'Books', "/books" %>
                </li>

                <li class="glyphicon glyphicon-log-out logout" rel="nofollow" data-method="delete">
                  <%= link_to 'logout', destroy_user_session_path, method: :delete %>
                </li>

              <% else %>
                <li class="glyphicon glyphicon-home home">
                  <%= link_to 'Home', home_index_path %>
                </li>

                <li class="glyphicon glyphicon-link about">
                  <%= link_to 'About', "/home/about" %>
                </li>

                <li class="glyphicon glyphicon-edit sign_up">
                  <%= link_to 'sign up', "/users/sign_up" %>
                </li>

                <li class="glyphicon glyphicon-log-in sign_in">
                  <%= link_to 'login', "/users/sign_in" %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </div>
    <%= yield %>
    <footer class="">
      <div class="container">
        <div class="row">
          <div class="col-xs-3 col-xs-offset-9">
          <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
