<div class="container">
  <div class="row">
    <div class="col-xs-3">
    <p>User info</p>
      <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class: "img-circle pull-left profile-thumb" %>
        <table class="table">
          <tr>
　　        <th>name</th>
　　        <th><%= @user.name %></th>
　        </tr>
　        <tr>
　　        <th>introduction</th>
　　        <th><%= @user.introduction %></th>
　　      </tr>
        </table>
      <%= link_to  edit_user_path, class: "btn btn-default" do %>
        <i class="fa fa-wrench"></i>
      <% end %>
      <h2> New book</h2>
      <%= form_for(@book, url: '/users') do |f| %>
        <p>Title</p>
        <%= f.text_field :title %>
        <p>Opinion</p>
        <%= f.text_area :body %>
        <%= f.submit "Create Book", class: "btn btn-primary col-xs-12" %>
        <% end %>
    </div>


    <div class="col-xs-9">
    	<h2>Books</h2>
    	<table class="table table-hover table-inverse">
    	  <thead>
    	    <tr>
    	      <th></th>
    	      <th>Title</th>
    	      <th>Opinion</th>
    	      <th colspan="3"></th>
    	    </tr>
    	  </thead>
        <% @books.each do |book| %>
    	  <tbody>
      	  <tr>
      	  	<td>
              <%= link_to(user_path(@user)) do %>
      	  	  <%= attachment_image_tag @user, :profile_image, :fill, 250, 250, format: 'jpeg', fallback: "no_image.jpg", size:'40x40' %>
              <% end %>
      	  	</td>
      	  	<td><%= link_to book.title, edit_book_path(@user) %></td>
      	  	<td><%= book.body %></td>
      	  </tr>
    	  </tbody>
        <% end %>
    	</table>
    </div>
  </div>
</div>


































































































